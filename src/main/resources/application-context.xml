<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties" />

    <bean id="csvResourceLoader" class="com.testmaster.repository.csv.impl.CsvResourceLoader">
        <constructor-arg value="${resources.zip}"/>
    </bean>
    <bean id="csvDirectoryLoader" class="com.testmaster.repository.csv.impl.CsvDirectoryLoader">
        <constructor-arg value="${directory.url}"/>
    </bean>
    <bean id="csvRepository" class="com.testmaster.repository.impl.CsvRepository">
        <constructor-arg>
            <list>
                <ref bean="csvResourceLoader"/>
                <ref bean="csvDirectoryLoader"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="userInput" class="com.testmaster.service.consoleinout.ConsoleUserInput" />
    <bean id="userOutput" class="com.testmaster.service.consoleinout.ConsoleUserOutput" />

    <bean id="userInOutService" class="com.testmaster.service.impl.UserInOutServiceImpl">
        <constructor-arg ref="userInput" />
        <constructor-arg ref="userOutput" />
    </bean>

    <bean id="testService" class="com.testmaster.service.impl.TestServiceImpl">
        <constructor-arg ref="csvRepository"/>
    </bean>

    <bean id="testLauncher" class="com.testmaster.launcher.TestLauncher">
        <constructor-arg ref="testService"/>
        <constructor-arg ref="userInOutService"/>
    </bean>
</beans>