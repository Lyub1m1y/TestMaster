<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties" />

    <bean id="testCsvLoader" class="com.testmaster.service.impl.TestCsvLoaderImpl">
        <constructor-arg value="${directory.url}"/>
    </bean>
    <bean id="testService" class="com.testmaster.service.impl.TestServiceImpl">
        <constructor-arg ref="testCsvLoader"/>
    </bean>
    <bean id="userInOut" class="com.testmaster.service.impl.UserInOutServiceImpl">
    </bean>
    <bean id="testExecutor" class="com.testmaster.TestExecutor">
        <constructor-arg ref="testService"/>
        <constructor-arg ref="userInOut"/>
    </bean>
</beans>