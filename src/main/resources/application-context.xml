<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="testLoader" class="com.testmaster.service.impl.TestLoaderImpl"></bean>
    <bean id="testService" class="com.testmaster.service.impl.TestServiceImpl">
        <constructor-arg ref="testLoader"/>
    </bean>
    <bean id="testController" class="com.testmaster.controller.TestController">
        <constructor-arg ref="testService"/>
    </bean>
</beans>